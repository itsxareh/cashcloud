<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChangePassword">

    <TextView
        android:id="@+id/changePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/cerebri_sans"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/changePasswordTitle" >

        <LinearLayout
            android:id="@+id/currentPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:padding="12dp">

            <TextView
                android:id="@+id/verificationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Password"
                android:textSize="12sp"
                android:fontFamily="@font/cerebri_sans"
                android:textColor="@color/darkpink" />
            <EditText
                android:id="@+id/currentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/cerebri_sans"
                android:background="@null"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/currentPasswordLayout"
            android:id="@+id/newPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textSize="12sp"
                android:fontFamily="@font/cerebri_sans"
                android:textColor="@color/darkpink" />
            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/cerebri_sans"
                android:background="@null"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/newPasswordLayout"
            android:id="@+id/confirmPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm New Password"
                android:textSize="12sp"
                android:fontFamily="@font/cerebri_sans"
                android:textColor="@color/darkpink" />
            <EditText
                android:id="@+id/confirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/cerebri_sans"
                android:background="@null"
                android:inputType="textPassword" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/cerebri_sans"
        android:text="Save"
        android:backgroundTint="@color/darkpink"
        android:layout_marginBottom="24dp"
        android:textSize="12sp" />

</RelativeLayout>