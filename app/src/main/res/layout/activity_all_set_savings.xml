<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllSetSavings">

    <TextView
        android:id="@+id/allsetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/cerebri_sans_semibold"
        android:padding="16dp"
        android:text="All set!"
        android:textColor="@color/black"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allsetText"
        android:fontFamily="@font/cerebri_sans"
        android:paddingHorizontal="16dp"
        android:textSize="18sp"
        android:text="You may now access your savings account."
        android:textColor="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:id="@+id/savingsDetails"
        android:background="@drawable/gray_border"
        android:layout_margin="16dp"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountNameText"
            android:text="Account Name"
            android:fontFamily="@font/cerebri_sans"
            android:textColor="@color/gray"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="6dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountName"
            android:layout_toRightOf="@+id/accountNumberText"
            android:text="Account name"
            android:fontFamily="@font/cerebri_sans_semibold"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="36dp"/>
        <View
            android:layout_below="@id/accountName"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gray_bottomborder" />

        <TextView
            android:layout_below="@id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountNumberText"
            android:text="Account Number"
            android:fontFamily="@font/cerebri_sans"
            android:textColor="@color/gray"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="6dp" />
        <TextView
            android:layout_below="@id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountNumber"
            android:layout_toRightOf="@+id/accountNumberText"
            android:text="Account number"
            android:fontFamily="@font/cerebri_sans_semibold"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="36dp"/>
        <View
            android:layout_below="@id/accountNumber"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gray_bottomborder" />

        <TextView
            android:layout_below="@id/accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openingDateText"
            android:text="Opening Date"
            android:fontFamily="@font/cerebri_sans"
            android:textColor="@color/gray"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="6dp" />
        <TextView
            android:layout_below="@id/accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openingDate"
            android:layout_toRightOf="@+id/accountNumberText"
            android:text="Opening Date"
            android:fontFamily="@font/cerebri_sans_semibold"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="36dp"/>
        <View
            android:layout_below="@id/openingDate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gray_bottomborder" />

        <TextView
            android:layout_below="@id/openingDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interestRateText"
            android:text="Interest Rate"
            android:fontFamily="@font/cerebri_sans"
            android:textColor="@color/gray"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="6dp" />
        <TextView
            android:layout_below="@id/openingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interestRate"
            android:layout_toRightOf="@+id/accountNumberText"
            android:text="8.0% per annum"
            android:fontFamily="@font/cerebri_sans_semibold"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="36dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Done"
            android:fontFamily="@font/cerebri_sans"
            android:paddingVertical="14dp"
            android:textColor="@color/pink"
            android:backgroundTint="@color/darkpink" />
    </LinearLayout>
</RelativeLayout>