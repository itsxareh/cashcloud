<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="14dp"
    android:background="@drawable/tlr_round_border"
    android:layout_margin="16dp"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your password"
        android:padding="16dp"
        android:textSize="24dp"
        android:fontFamily="@font/cerebri_sans"
        android:gravity="center"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/recoveryDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePhoneText"
        android:text="Please enter your password to confirm that you want to change your registered mobile number."
        android:fontFamily="@font/cerebri_sans"
        android:padding="4dp"
        android:textColor="@color/gray" />
    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recoveryDescriptionText"
        android:layout_marginTop="16sp"
        android:orientation="vertical"
        android:background="@drawable/gray_border"
        android:padding="16dp">

        <TextView
            android:id="@+id/verificationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="12sp"
            android:fontFamily="@font/cerebri_sans"
            android:textColor="@color/darkpink" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/cerebri_sans"
            android:background="@null"
            android:inputType="textPassword" />

        <!-- Verification status -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/cerebri_sans"
            android:paddingVertical="14dp"
            android:textColor="@color/darkpink"
            android:backgroundTint="@color/pink" />
        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:fontFamily="@font/cerebri_sans"
            android:paddingVertical="14dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/darkpink" />
    </LinearLayout>
</LinearLayout>