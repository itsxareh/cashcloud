<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptActivity">

    <TextView
        android:id="@+id/receiptTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="Send Money"
        android:textSize="24sp"
        android:fontFamily="@font/cerebri_sans_semibold"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_below="@id/receiptTitle"
        android:id="@+id/inputAmountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/gray_border" >

        <TextView
            android:id="@+id/successfullySent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Successfully sent"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="6dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/recipientName"
            android:layout_below="@id/successfullySent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipient name"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:gravity="center" />
        <TextView
            android:id="@+id/recipientNo"
            android:layout_below="@id/recipientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipient no"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_below="@id/recipientNo"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:layout_margin="6dp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/amount"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_below="@id/recipientNo"
            android:text="PHP"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:layout_margin="6dp"
            android:textColor="@color/gray"
            android:gravity="center" />

        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amountText"
            android:text="Total"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:layout_margin="6dp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/total"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@id/amount"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:text="PHP"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:layout_margin="6dp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/referenceText"
            android:layout_below="@id/totalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference No."
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/reference"
            android:layout_below="@id/referenceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxx"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/datetimeText"
            android:layout_below="@id/reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datetime"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/cerebri_sans"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:gravity="center" />

    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/okayButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/cerebri_sans"
        android:text="Okay"
        android:backgroundTint="@color/darkpink"
        android:layout_marginBottom="24dp"
        android:textSize="12sp" />
</RelativeLayout>