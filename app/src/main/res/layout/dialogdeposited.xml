<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="14dp"
    android:background="@drawable/tlr_round_border"
    android:layout_margin="16dp"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have deposited"
        android:paddingTop="16dp"
        android:gravity="center"
        android:textSize="24dp"
        android:fontFamily="@font/cerebri_sans_semibold"
        android:textColor="@color/black" />
    <RelativeLayout
        android:id="@+id/amountLayout"
        android:layout_below="@id/confirmText"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pesoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±"
            android:layout_marginTop="10dp"
            android:textSize="36sp"
            android:fontFamily="@font/cerebri_sans_semibold"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_toRightOf="@id/pesoText"
            android:layout_marginTop="10dp"
            android:textSize="36sp"
            android:fontFamily="@font/cerebri_sans_semibold"
            android:textColor="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recoveryDescriptionText"
        android:layout_marginTop="16sp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From your wallet to your savings"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/cerebri_sans"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/viewReceipt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="View Receipt"
            android:fontFamily="@font/cerebri_sans"
            android:paddingVertical="14dp"
            android:textColor="@color/darkpink"
            android:backgroundTint="@color/pink" />
        <Button
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Done"
            android:fontFamily="@font/cerebri_sans"
            android:paddingVertical="14dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/darkpink" />
    </LinearLayout>
</LinearLayout>